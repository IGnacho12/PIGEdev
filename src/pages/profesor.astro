---
import Layout from "../layouts/Layout.astro";
import TeacherPage from "@/components/pages/profesor/PaginaDeProfesor";

---

<Layout>
  <!-- Fondos -->
  <!-- Fondo modo claro  -->
  <div
    class="block dark:hidden fixed inset-0 -z-10 w-full min-h-screen bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]"
  >
  </div>

  <!-- Fondo modo oscuro  -->
  <!-- Gradiente que se queda fijo arriba -->

  <div
    class="block fixed inset-0 -z-10 w-full min-h-screen
         bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)]
         bg-[size:6rem_4rem]
         dark:bg-[linear-gradient(to_right,#171717_1px,transparent_1px),linear-gradient(to_bottom,#171717_1px,transparent_1px)]"
  >
  </div>

  <!-- Fondo oscuro que cubre todo lo demÃ¡s -->
  <div
    class="hidden dark:block absolute inset-0 w-full min-h-screen -z-20 bg-neutral-950"
  >
  </div>
  <TeacherPage client:load />
</Layout>
